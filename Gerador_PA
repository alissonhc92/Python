print('GERADOR DE PA')
print('-='*10)
primeiro = int(input('Primeiro termo: '))
razao = int(input('Razão da PA: '))

termo = primeiro
cont = 1
total = 0
res = 10
while res != 0:
  total += res
  while cont <= total:
    print('{} > '.format(termo), end='')
    termo += razao
    cont += 1
  print('PAUSA')
  res = int(input('Quantos termos quer mostrar a mais? '))
print('A progressão foi finalizada com {} termos mostrados'.format(total))
